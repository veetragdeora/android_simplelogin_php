<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.veetragdeora.e_business_project.Contact"
    tools:showIn="@layout/activity_contact"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Kumar Vinay"
        android:id="@+id/contact_name_vinay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:clickable="false"
        android:textSize="25sp"
        android:textColor="#76FF03"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+918345982944"
        android:id="@+id/phone_vinay"
        android:layout_below="@+id/contact_name_vinay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/button_call_vinay"
        android:layout_below="@+id/contact_name_vinay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="krvinay.iitkgp@gmail.com"
        android:id="@+id/email_vinay"
        android:layout_below="@+id/button_call_vinay"
        android:layout_alignLeft="@+id/phone_vinay"
        android:layout_alignStart="@+id/phone_vinay"
        android:textSize="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/button_email_vinay"
        android:layout_below="@+id/button_call_vinay"
        android:layout_alignRight="@+id/button_call_vinay"
        android:layout_alignEnd="@+id/button_call_vinay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Veetrag Deora"
        android:id="@+id/contact_name_veetrag"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#76FF03"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+917585966065"
        android:id="@+id/phone_veetrag"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/button_call_veetrag"
        android:layout_alignLeft="@+id/email_vinay"
        android:layout_alignStart="@+id/email_vinay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/button_call_veetrag"
        android:layout_below="@+id/contact_name_veetrag"
        android:layout_alignRight="@+id/button_email_vinay"
        android:layout_alignEnd="@+id/button_email_vinay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="veetragdeora11@gmail.com"
        android:id="@+id/email_veetrag"
        android:layout_below="@+id/phone_veetrag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/button_email_veetrag"
        android:layout_below="@+id/email_veetrag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
